<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
<sheets>
	<s_DEF>
		<ROOT>
			<TCEforms>
			<sheetTitle>Konfiguration</sheetTitle>
			</TCEforms>

			<type>array</type>
			<el>
				<mode>
					<TCEforms>
					<label>LLL:EXT:tmd_cinema/locallang_db.xml:mode</label>
					<config>
						<type>select</type>
						<items>
							<numIndex index="0">
								<numIndex index="0">LLL:EXT:tmd_cinema/locallang_db.xml:shortView</numIndex>
								<numIndex index="1">shortView</numIndex>
							</numIndex>
							
							<numIndex index="1">
								<numIndex index="0">LLL:EXT:tmd_cinema/locallang_db.xml:completeView</numIndex>
								<numIndex index="1">longView</numIndex>
							</numIndex>
							
							<numIndex index="4">
								<numIndex index="0">LLL:EXT:tmd_cinema/locallang_db.xml:singelView</numIndex>
								<numIndex index="1">singleView</numIndex>
							</numIndex>
							
							<numIndex index="5">
								<numIndex index="0">LLL:EXT:tmd_cinema/locallang_db.xml:specialView</numIndex>
								<numIndex index="1">special</numIndex>
							</numIndex>

							<numIndex index="6">
								<numIndex index="0">LLL:EXT:tmd_cinema/locallang_db.xml:newsFeed</numIndex>
								<numIndex index="1">RSS</numIndex>
							</numIndex>

							<numIndex index="7">
								<numIndex index="0">LLL:EXT:tmd_cinema/locallang_db.xml:booking</numIndex>
								<numIndex index="1">booking</numIndex>
							</numIndex>

							<numIndex index="7">
								<numIndex index="0">LLL:EXT:tmd_cinema/locallang_db.xml:tipafriend</numIndex>
								<numIndex index="1">tipAFriend</numIndex>
							</numIndex>
							
						</items>
					</config>
				</TCEforms>
				</mode>


				<cinema>
				<TCEforms>
				<label>LLL:EXT:tmd_cinema/locallang_db.xml:cinemas</label>
					<config>
						<type>select</type>
						<foreign_table>tt_address</foreign_table>
						<foreign_table_where> AND tt_address.pid = ###STORAGE_PID### </foreign_table_where>
						<size>5</size>
						<minitems>1</minitems>
						<maxitems>10</maxitems>
					</config>
				</TCEforms>
				</cinema>


<!-- Condition -->
				<special>
				<TCEforms>
					<displayCond>FIELD:mode:IN:special</displayCond>
					<label>LLL:EXT:tmd_cinema/locallang_db.xml:showScpecial</label>
					<config>
						<type>select</type>
						<foreign_table>tx_tmdcinema_showtype</foreign_table>
						<foreign_table_where> AND tx_tmdcinema_showtype.pid = ###STORAGE_PID### </foreign_table_where>
						<size>5</size>
						<minitems>0</minitems>
						<maxitems>10</maxitems>
					</config>
				</TCEforms>
				</special>



				<previewMin>
				<TCEforms>
					<label>LLL:EXT:tmd_cinema/locallang_db.xml:weeksAheadMin</label>
					<config>
						<type>input</type>
						<size>5</size>
						<eval>int</eval>
						<default>1</default>
						<range><lower>0</lower></range>
					</config>
				</TCEforms>
				</previewMin>

				<previewMax>
				<TCEforms>
				<label>LLL:EXT:tmd_cinema/locallang_db.xml:weeksAheadMax</label>
					<config>
						<type>input</type>
						<size>5</size>
						<eval>int</eval>
						<default>5</default>
						<range><lower>1</lower></range>
					</config>
				</TCEforms>
				</previewMax>

				<previewNotice>
				<TCEforms>
				<label>LLL:EXT:tmd_cinema/locallang_db.xml:noPrg</label>
					<config>
						<type>input</type>
						<!-- default>LLL:EXT:tmd_cinema/locallang_db.xml:noPrgDefault</default geht das nicht?-->
						<default>Das Programm ab %s ist noch nicht bekannt.</default>
					</config>
				</TCEforms>
				</previewNotice>

				<disableReserved>
				<TCEforms>
				<label>LLL:EXT:tmd_cinema/locallang_db.xml:noBooking</label>
					<config>
						<type>check</type>
					</config>
				</TCEforms>
				</disableReserved>

				<pageReserve>
				<TCEforms>
					<exclude>1</exclude>
					<label>LLL:EXT:tmd_cinema/locallang_db.xml:booking</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<size>1</size>
						<maxitems>1</maxitems>
						<minitems>0</minitems>
						<show_thumbs>0</show_thumbs>
					</config>
				</TCEforms>
				</pageReserve>

				
			</el>
		</ROOT>
	</s_DEF>





	<s_image>
		<ROOT>
			<TCEforms>
			<sheetTitle>LLL:EXT:tmd_cinema/locallang_db.xml:image</sheetTitle>
			</TCEforms>

			<type>array</type>
			<el>
			
				<linkImagePage>
				<TCEforms>
					<exclude>1</exclude>
					<label>LLL:EXT:tmd_cinema/locallang_db.xml:linkPage</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<size>1</size>
						<maxitems>1</maxitems>
						<minitems>0</minitems>
						<show_thumbs>0</show_thumbs>
					</config>
				</TCEforms>
				</linkImagePage>

				<width>
				<TCEforms>
				<label>LLL:EXT:tmd_cinema/locallang_db.xml:width</label>
					<config>
						<type>input</type>
						<size>5</size>
						<eval>int</eval>
						<default>80</default>
					</config>
				</TCEforms>
				</width>
			
				<clickEnlarge>
				<TCEforms>
					<label>LLL:EXT:tmd_cinema/locallang_db.xml:clickEnlarge</label>
					<config>
						<type>check</type>
					</config>
				</TCEforms>
				</clickEnlarge>
			</el>
		</ROOT>
	</s_image>


	<s_specialConfiguration>
		<ROOT>
			<TCEforms>
			<sheetTitle>LLL:EXT:tmd_cinema/locallang_db.xml:specialConfiguration</sheetTitle>
			</TCEforms>

			<type>array</type>
			<el>

				<pageTipAFriend>
				<TCEforms>
					<exclude>1</exclude>
					<label>LLL:EXT:tmd_cinema/locallang_db.xml:tipafriend</label>
					<config>
						<type>group</type>
						<internal_type>db</internal_type>
						<allowed>pages</allowed>
						<size>1</size>
						<maxitems>1</maxitems>
						<minitems>0</minitems>
						<show_thumbs>0</show_thumbs>
					</config>
				</TCEforms>
				</pageTipAFriend>
			</el>
		</ROOT>
	</s_specialConfiguration>
	
	
</sheets>
</T3DataStructure>

